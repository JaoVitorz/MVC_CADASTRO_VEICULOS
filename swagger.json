{
  "openapi": "3.0.0",
  "info": {
    "title": "API de Veículos",
    "version": "1.0.0",
    "description": "Documentação da API de veículos usando Swagger"
  },
  "servers": [
    { "url": "http://localhost:3000" }
  ],
  "paths": {
    "/veiculos": {
      "get": {
        "summary": "Listar todos os veículos",
        "responses": {
          "200": {
            "description": "Lista de veículos"
          }
        }
      },
      "post": {
        "summary": "Cadastrar um novo veículo",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "marca": { "type": "string" },
                  "modelo": { "type": "string" },
                  "ano": { "type": "integer" }
                }
              }
            }
          }
        },
        "responses": {
          "201": { "description": "Veículo cadastrado" }
        }
      }
    },
    "/veiculos/{id}": {
      "put": {
        "summary": "Editar veículo",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "integer" } }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "marca": { "type": "string" },
                  "modelo": { "type": "string" },
                  "ano": { "type": "integer" }
                }
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Veículo atualizado" }
        }
      },
      "delete": {
        "summary": "Excluir veículo",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "integer" } }
        ],
        "responses": {
          "200": { "description": "Veículo excluído" }
        }
      }
    }
  }
}
